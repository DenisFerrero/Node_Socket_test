<!DOCTYPE html>
<html>
  <head>
    <!-- Importing partials page using EJS -->
    <%- include('../partials/header'); -%>
    <title>Home</title>
  </head>
  <body>
    <div class="row justify-content-center mt-2">
      <div class="col-6">
        <h3 class="text-center">Form test</h3>
        <form method="POST" action="/hello" class="border border-primary rounded p-2">
          <!-- Input text -->
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">Name</span>
            </div>
            <input class="form-control" placeholder="Username" name="name">
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
        <div class="border border-secondary rounded mt-2 p-2">
          <div class="input-group">
            <div class="input-group-prepend">
              <button class="btn btn-secondary" onclick="emit_toc()">Toc</button>
            </div>
            <div id="counter" class="form-control"></div>
          </div>
        </div>
      </div>
    </div>   
    <%- include('../partials/footer'); -%>
  </body>
</html>